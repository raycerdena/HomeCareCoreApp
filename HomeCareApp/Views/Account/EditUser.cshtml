@model HomeCareApp.Core.ViewModels.EditUserFormView
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>



<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <header class="card-header">

                    <h4 class="card-title mt-2">Edit User</h4>
                </header>
                <article class="card-body">
                    <form method="post" asp-action="EditUser" asp-controller="Account">
                        <div class="form-row">

                            <div class="col form-group">
                                <label>First name </label>
                                <input asp-for="Firstname" class="form-control" placeholder="Firstname">
                            </div> <!-- form-group end.// -->
                            <div class="col form-group">
                                <label>Last name</label>
                                <input asp-for="Lastname" class="form-control" placeholder="Lastname">
                            </div> <!-- form-group end.// -->
                        </div> <!-- form-row end.// -->
                        <div class="form-group">
                            <label>Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="UserName" maxlength="20">
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label>Email address</label>
                            <input asp-for="Email" class="form-control" placeholder="Email Address">
                            <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div> <!-- form-group end.// -->
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
                        </div>
                        <div class="form-group">
                            <label>Roles</label>
                            <select asp-for="RoleId" class="form-control" asp-items="@(Model.ApplicationRoles)"><option>-Select-</option></select>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Submit  </button>
                        </div>

                    </form>
                </article>
                <div class="border-top card-body text-center">Have an account? <a href="">Log In</a></div>
            </div>
        </div>
    </div>
</div> 